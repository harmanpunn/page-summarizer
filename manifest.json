{
    "manifest_version": 3,
    "name": "Webpage Summarizer",
    "version": "1.0",
    "description": "Summarizes webpages",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost/**"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "pane.html",
                "bootstrap/css/bootstrap.min.css",
                "bootstrap/js/bootstrap.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_title": "Webpage Summarizer"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "bootstrap/js/bootstrap.min.js"
            ],
            "css": [
                "styles.css",
                "bootstrap/css/bootstrap.min.css",
                "font-awesome.min.css"
            ]
        }
    ]
}